                    <elementSpec ident="TEI" mode="change" module="textstructure">
                        <classes mode="change">
                            <memberOf key="att.global" mode="delete"/>
                        </classes>
                        <content>
                            <rng:choice>
                                <!--   Ordentlicher Eintrag   -->
                                <rng:group>
                                    <rng:ref name="teiHeader"/>
                                    <rng:choice>
                                        <rng:group>
                                            <rng:oneOrMore>
                                                <rng:ref name="model.resourceLike"/>
                                            </rng:oneOrMore>
                                            <rng:optional>
                                                <rng:ref name="text"/>
                                            </rng:optional>
                                        </rng:group>
                                        <rng:ref name="text"/>
                                    </rng:choice>
                                </rng:group>
                                <!--  Dubletten  -->
                                <rng:element name="ref">
                                    <rng:attribute name="type">
                                        <rng:value>duplicate</rng:value>
                                    </rng:attribute>
                                    <rng:attribute name="target">
                                        <rng:choice>
                                            <rng:ref name="key.letter.pattern"/>
                                            <rng:ref name="key.writing.pattern"/>
                                        </rng:choice>
                                    </rng:attribute>
                                    <rng:empty/>
                                </rng:element>
                            </rng:choice>
                        </content>
                        <attList>
                            <attDef ident="version" mode="delete"/>
                            <attDef ident="xml:id">
                                <datatype>
                                    <rng:choice>
                                        <rng:ref name="key.letter.pattern"/>
                                    </rng:choice>
                                </datatype>
                            </attDef>
                        </attList>
                    </elementSpec>

                    <elementSpec ident="text" mode="change" module="textstructure">
                        <classes mode="change">
                            <memberOf key="att.declaring" mode="delete"/>
                            <memberOf key="att.typed" mode="delete"/>
                        </classes>
                        <content>
                            <rng:ref name="body"/>
                        </content>
                        <attList>
                            <attDef ident="type" mode="add" usage="req">
                                <valList type="closed">
                                    <valItem ident="letter"/>
                                    <valItem ident="postcard"/>
                                </valList>
                            </attDef>
                        </attList>
                    </elementSpec>

                    <elementSpec ident="body" mode="change" module="textstructure">
                        <classes mode="change">
                            <memberOf key="att.declaring" mode="delete"/>
                            <memberOf key="att.global" mode="delete"/>
                        </classes>
                        <content>
                            <rng:optional>
                                <rng:element name="div">
                                    <rng:ref name="address"/>
                                    <rng:attribute name="type">
                                        <rng:value>address</rng:value>
                                    </rng:attribute>
                                    <rng:optional>
                                        <rng:attribute name="facs">
                                            <rng:ref name="data.pointer"/>
                                        </rng:attribute>
                                    </rng:optional>
                                </rng:element>
                            </rng:optional>
                            <rng:interleave>
                                <rng:zeroOrMore>
                                    <rng:ref name="addSpan"/>
