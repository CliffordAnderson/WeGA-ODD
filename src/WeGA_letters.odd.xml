                                        <rng:ref name="addSpan.content"/>
                                        <rng:attribute name="hand">
                                            <rng:ref name="data.pointer"/>
                                        </rng:attribute>
                                        <rng:attribute name="spanTo">
                                            <rng:ref name="data.pointer"/>
                                        </rng:attribute>
                                    </rng:element>-->
                                </rng:zeroOrMore>
                                <rng:zeroOrMore>
                                    <rng:ref name="anchor"/>
                                    <!--<rng:element name="anchor">
                                        <rng:ref name="anchor.content"/>
                                        <rng:ref name="att.global.attribute.xmlid"/>
                                    </rng:element>-->
                                </rng:zeroOrMore>
                                <rng:zeroOrMore>
                                    <rng:ref name="pb"/>
                                </rng:zeroOrMore>
                                <rng:oneOrMore>
                                    <rng:ref name="div"/>
                                    <!--<rng:element name="div">
                                        <rng:ref name="wega.div.content"/>
                                        <rng:group>
                                            <rng:attribute name="type">
                                                <rng:value>writingDate</rng:value>
                                            </rng:attribute>
                                            <rng:attribute name="n">
                                                <rng:data type="int"/>
                                            </rng:attribute>
                                            <rng:optional>
                                                <rng:attribute name="rend">
                                                    <rng:value>inline</rng:value>
                                                </rng:attribute>
                                            </rng:optional>
                                            <rng:optional>
                                                <rng:attribute name="facs">
                                                    <rng:ref name="data.pointer"/>
                                                </rng:attribute>
                                            </rng:optional>
                                        </rng:group>
                                    </rng:element>-->
                                </rng:oneOrMore>
                            </rng:interleave>
                        </content>
                    </elementSpec>

                    <elementSpec ident="div" mode="change" module="textstructure">
                        <classes mode="change">
                            <memberOf key="att.divLike" mode="delete"/>
                            <memberOf key="att.declaring" mode="delete"/>
                            <memberOf key="att.typed" mode="delete"/>
                            <memberOf key="att.global" mode="delete"/>
                        </classes>
                        <content>
                            <rng:group>
                                <rng:zeroOrMore>
                                    <rng:choice>
                                        <rng:ref name="model.divTop"/>
                                        <rng:ref name="model.global"/>
                                    </rng:choice>
                                </rng:zeroOrMore>
                                <rng:optional>
                                    <rng:choice>
                                        <rng:group>
                                            <rng:oneOrMore>
                                                <rng:choice>
                                                  <rng:ref name="model.divLike"/>
                                                  <rng:ref name="model.divGenLike"/>
                                                </rng:choice>
                                                <rng:zeroOrMore>
                                                  <rng:ref name="model.global"/>
                                                </rng:zeroOrMore>
                                            </rng:oneOrMore>
                                        </rng:group>
                                        <rng:group>
                                            <rng:oneOrMore>
                                                <rng:group>
                                                  <rng:ref name="model.common"/>
