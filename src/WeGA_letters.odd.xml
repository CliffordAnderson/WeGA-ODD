                                                <rng:zeroOrMore>
                                                  <rng:ref name="model.global"/>
                                                </rng:zeroOrMore>
                                            </rng:oneOrMore>
                                            <rng:zeroOrMore>
                                                <rng:choice>
                                                  <rng:ref name="model.divLike"/>
                                                  <rng:ref name="model.divGenLike"/>
                                                </rng:choice>
                                                <rng:zeroOrMore>
                                                  <rng:ref name="model.global"/>
                                                </rng:zeroOrMore>
                                            </rng:zeroOrMore>
                                        </rng:group>
                                    </rng:choice>
                                    <rng:optional>
                                        <!--<rng:group>
                                            <rng:ref name="model.divBottom"/>
                                        </rng:group>
                                        <rng:zeroOrMore>
                                            <rng:ref name="model.global"/>
                                            </rng:zeroOrMore>-->
                                        <rng:interleave>
                                            <rng:optional>
                                                <rng:ref name="closer"/>
                                            </rng:optional>
                                            <!--<rng:zeroOrMore>
                                                <rng:ref name="signed"/>
                                            </rng:zeroOrMore>-->
                                            <rng:zeroOrMore>
                                                <rng:ref name="postscript"/>
                                            </rng:zeroOrMore>
                                            <rng:zeroOrMore>
                                                <rng:ref name="note"/>
                                            </rng:zeroOrMore>
                                        </rng:interleave>
                                    </rng:optional>
                                </rng:optional>
                            </rng:group>
                        </content>
                        <attList>
                            <attDef ident="type" mode="add" usage="req">
                                <datatype>
                                    <rng:value>writingSession</rng:value>
                                </datatype>
                            </attDef>
                            <attDef ident="n" mode="add" usage="req">
                                <datatype>
                                    <rng:ref name="data.count"/>
                                </datatype>
                            </attDef>
                            <attDef ident="facs" mode="add" usage="opt">
                                <datatype>
                                    <rng:ref name="data.pointer"/>
                                </datatype>
                            </attDef>
                            <attDef ident="rend" mode="add" usage="mwa">
                                <datatype>
                                    <rng:value>inline</rng:value>
                                </datatype>
                            </attDef>
                            <attDef ident="xml:id" mode="add" usage="opt">
                                <datatype>
                                    <rng:data type="ID"/>
                                </datatype>
                            </attDef>
                        </attList>
                    </elementSpec>

                    <elementSpec ident="notesStmt" mode="change" module="header">
                        <classes>
                            <memberOf key="att.global" mode="delete"/>
                        </classes>
                        <content>
                            <rng:optional>
                                <rng:element name="note">
                                    <rng:attribute name="type">
                                        <rng:value>summary</rng:value><a:documentation>Zusammenfassung</a:documentation>
                                    </rng:attribute>
                                    <rng:ref name="macro.specialPara"/>
                                </rng:element>
                            </rng:optional>
                            <rng:optional>
                                <rng:element name="note">
                                    <rng:attribute name="type">
                                        <rng:value>editorial</rng:value><a:documentation>Generalkommentar</a:documentation>
                                    </rng:attribute>
                                    <rng:ref name="macro.specialPara"/>
                                </rng:element>
                            </rng:optional>
                        </content>
                    </elementSpec>

                    <elementSpec ident="closer" mode="change" module="textstructure">
                        <classes mode="change">
                            <memberOf key="att.global" mode="delete"/>
                        </classes>
                        <attList>
                            <attDef ident="rend" mode="add" usage="mwa">
                                <valList type="closed">
                                    <valItem ident="inline"/>
                                    <valItem ident="right"/>
                                    <valItem ident="left"/>
                                </valList>
                            </attDef>
                            <attDef ident="n" mode="add" usage="opt">
                                <desc>Nicht ausgeschriebene BriefschlÃ¼sse, die mal mit pp. oder etc.
                                    abgekÃ¼rzt sind.</desc>
                                <datatype>
                                    <rng:value>etc</rng:value>
                                </datatype>
                            </attDef>
                            <attDef ident="xml:id" mode="add" usage="opt">
                                <datatype>
                                    <rng:data type="ID"/>
                                </datatype>
                            </attDef>
                        </attList>
                    </elementSpec>

                    <elementSpec ident="postscript" mode="change" module="textstructure">
                        <classes mode="change">
                            <memberOf key="att.global" mode="delete"/>
                        </classes>
                        <!-- Beispiel von Frau Bartlitz (Email vom 24. August 2012) [PS] -->
                        <exemplum xml:lang="de">
                            <egXML xmlns="http://www.tei-c.org/ns/Examples">
                                <postscript><p>ich schikke der Sicherheit halber alles Ã¼ber Prag, durch Liebig</p></postscript>
                            </egXML>
                        </exemplum>
                    </elementSpec>

                    <!--      Dieses Attribut wird innerhalb der keywords/list vorÃ¼bergehend(?) benÃ¶tigt             -->
                    <elementSpec ident="item" mode="change" module="core">
                        <attList>
                            <attDef ident="cert" mode="add" usage="opt">
                                <datatype>
                                    <rng:ref name="data.certainty"/>
                                </datatype>
                            </attDef>
                        </attList>
                    </elementSpec>
                    
                    <elementSpec ident="dateline" mode="change" module="textstructure">
                        <classes mode="change">
                            <memberOf key="att.global" mode="delete"/>
                        </classes>
                        <attList>
                            <attDef ident="rend" mode="add" usage="mwa">
                                <desc>(rendition) gibt die Textausrichtung in der Quelle an</desc>
                                <valList type="closed">
                                    <valItem ident="inline"/>
                                    <valItem ident="right"/>
                                    <valItem ident="left"/>
                                    <valItem ident="center"/>
                                </valList>
                            </attDef>
                        </attList>
                    </elementSpec>
                    
                    <elementSpec ident="idno" mode="change" module="header">
                        <classes mode="change">
                            <memberOf key="att.global" mode="delete"/>
                        </classes>
                        <attList>
                            <attDef ident="type" mode="replace" usage="opt">
                                <valList type="closed">
                                    <valItem ident="WeGA">
                                        <desc>The record number of the ancient AskSam-db "Briefe1" of the Carl-Maria-von-Weber-Gesamtausgabe (WeGA)</desc>
                                    </valItem>
                                    <valItem ident="KS">
                                        <desc>The document identifier from Georg Kaiser's "SÃ¤mtliche Schriften von Carl Maria von Weber" (Schuster &amp; LÃ¶ffler 1908)</desc>
                                    </valItem>
                                    <valItem ident="RochlitzAskSam">
                                        <desc>The record number of the ancient AskSam-db "Rochlitz" of the Carl-Maria-von-Weber-Gesamtausgabe (WeGA)</desc>
                                    </valItem>
                                </valList>
                            </attDef>
                            <attDef ident="n" mode="add" usage="mwa">
                                <datatype>
                                    <rng:data type="string">
                                        <rng:param name="pattern">\d{1,4}[ab]?</rng:param>
                                    </rng:data>
                                </datatype>
                            </attDef>
                        </attList>
                    </elementSpec>
                    
                    <elementSpec ident="signed" mode="change" module="textstructure">
                        <desc xml:lang="de">enthÃ¤lt die Unterschrift(szeile) ink. Schlussfloskel. 
                            Es wird dabei standardmÃ¤ÃŸig von einer <emph>rechtsbÃ¼ndigen</emph> Zeile ausgegangen;
                            ist dies in der Quelle nicht der Fall, so kann die Ausrichtung mittels <att>rend</att> angegeben werden.
                        </desc>
                        <classes mode="change">
                            <memberOf key="att.global" mode="delete"/>
                        </classes>
                        <attList>
                            <attDef ident="rend" mode="add" usage="mwa">
                                <valList type="closed">
                                    <valItem ident="center"/>
                                    <valItem ident="right"/>
                                    <valItem ident="left"/>
                                </valList>
                            </attDef>
                        </attList>
                        <exemplum xml:lang="de">
                            <egXML xmlns="http://www.tei-c.org/ns/Examples">
                                <signed>Millionen BuÃŸen, Dein Carl</signed>
                            </egXML>
                        </exemplum>
                    </elementSpec>

                    <!--       note fehlt     -->
                    
                </schemaSpec>
            </div>
        </body>
    </text>
