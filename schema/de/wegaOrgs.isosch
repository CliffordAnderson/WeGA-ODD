                </pattern>
   <pattern id="schematron-constraint-wegaOrgs-orgName-parent-not-org-33">
                    <rule context="tei:orgName[not(parent::tei:org)]">
                        <report test="@type">No @type attribute allowed here.</report>
                    </rule>
                </pattern>
